{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@pages": ["./tests/pages/index.ts"],
      "@fixtures": ["./test/fixtures/fixtures.ts"],
      "@data": ["./test/data/index.ts"],
      "@env": ["./test/env/env.ts"],
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
